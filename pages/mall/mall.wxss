/* pages/mall/mall.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f0f0f0;
  /* align-items: flex-start; */
  justify-content: space-between;
  box-sizing: border-box;
}

.search {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background: #fff;
  /* border-top: 1px solid #000; *//* border-bottom: 1px solid #eee; */
}

.search_icon {
  padding: 0 15rpx;
}

.search_box {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
}

.search_box_placeholder {
  font-weight: 200;
}

.page {
  width: 100%;
  background: #eee;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.go {
  margin-bottom: 10rpx;
  height: 200rpx;
  width: 100%;
  background: #509f50;
}

.card_box {
  display: flex;
  flex-direction: column;
  padding: 15rpx;
}

.card_box_header {
  display: flex;
  flex-direction: row;
}

.card_box_header_tab {
  color: #fff;
  background: #62b1db;
  padding: 15rpx 15rpx;
  /* border: 1px solid #eee; */
}

.card_box_header_tab_sel {
  background: #1296db;
}

.card_box_body {
  height: 400rpx;
}

/* --- tab 2 --- */

.user {
  display: flex;
  flex-direction: column;
  background: #fff;
  /* height: 400rpx; */
  padding: 15rpx;
  border-bottom: 1px solid #ddd;
}

.user_header {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user_favicon {
  background: #fff;
  border-radius: 25rpx;
  width: 120rpx;
  height: 120rpx;
}

.user_info {
  margin: 10rpx;
  display: flex;
  flex-direction: column;
}

.user_info_brief {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  line-height: 40rpx;
}

.user_nick {
  font-size: 30rpx;
  margin-right: 20rpx;
}

.user_level {
  font-size: 18rpx;
  margin-right: 10rpx;
  color: #509f50;
  border: 2rpx solid #509f50;
  padding: 0 5rpx;
  border-radius: 7rpx;
  /* box-shadow: 2rpx 2rpx 5rpx #888; */
}

.user_identity {
  font-size: 18rpx;
  margin-right: 10rpx;
  color: #509f50;
  border: 2rpx solid #509f50;
  padding: 0 5rpx;
  border-radius: 7rpx;
}

.user_track {
  font-size: 24rpx;
}

.biu {
  margin-right: 20rpx;
  font-size: 24rpx;
  height: 30rpx;
  line-height: 30rpx;
  /* border: 2rpx solid #999; */
  padding: 10rpx;
  background: #509f50;
  border-radius: 7rpx;
  color: #fff;
}

.spots_wrap {
  margin: 10rpx 0 0;
  overflow: hidden;
  white-space: nowrap;
}

.spot_wrap {
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.wrap {
  position: relative;
  width: 230rpx;
  height: 230rpx;
  margin-right: 15rpx;
  display: flex;
  flex-direction: column-reverse;
  align-items: flex-end;
}

.spot {
  position: absolute;
  left: 0;
  top: 0;
  background: #fff;
  width: 230rpx;
  height: 230rpx;
  z-index: 0;
}

.spot_like {
  padding: 0 10rpx;
  background: rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  align-items: center;
  z-index: 1;
}

.like_num {
  font-size: 24rpx;
  color: #fff;
}

.spot_name {
  font-size: 24rpx;
}

/* --- tab 3 --- */

.panel {
  margin: 30rpx;
  padding: 15rpx;
  background: #fff;
  /* height: 100rpx; */
  border-radius: 10rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.panel_line {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  padding: 0 10rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.panel_line_last {
  border: none;
}

.panel_line_checkbox {
  font-size: 30rpx;
}

.panel_checkbox {
  transform: scale(0.8);
}

.date {
  width: 100%;
  border-bottom: none;
}

.btn {
  background: #509f50;
  width: 100%;
  color: #fff;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  vertical-align: middle;
}
