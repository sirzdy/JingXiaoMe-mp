/* pages/local/local.wxss */

.sep {
  flex: 1;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: flex-start; */
  justify-content: space-between;
  box-sizing: border-box;
}

/* 头部 */

.header {
  width: 750rpx;
  height: 500rpx;
  display: flex;
  flex-direction: column-reverse;
}

.header_image {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 500rpx;
  z-index: -1;
}

.header_info {
  justify-content: space-between;
  align-items: flex-end;
  display: flex;
  flex-direction: row;
  padding: 10rpx;
}

.header_favicon {
  margin: 0 10rpx;
  background: #fff;
  border-radius: 25rpx;
  width: 80rpx;
  height: 80rpx;
}

.header_text {
  color: #fff;
  font-size: 24rpx;
}

.header_info_left {
  display: flex;
  flex-direction: column;
}

/* 本地 */

.pos_wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-end;
  padding: 40rpx 20rpx 0;
}

.pos {
  font-size: 48rpx;
  text-shadow: 2rpx 2rpx 1rpx #333;
}

.pos_more {
  font-size: 36rpx;
}

.track {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.track_user {
  margin: 0 10rpx;
  background: #fff;
  border-radius: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.track_more {
  font-size: 24rpx;
}

.hot {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx;
}

.hot_header {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 10rpx;
}

.hot_text {
  font-size: 36rpx;
}

.hot_more {
  font-size: 24rpx;
}

.spots_wrap {
  overflow: hidden;
  white-space: nowrap;
}

.spot_wrap {
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.spot {
  margin-right: 10rpx;
  background: #fff;
  width: 140rpx;
  height: 140rpx;
}

.spot_name {
  font-size: 24rpx;
}

.topics_wrap {
  overflow: hidden;
  white-space: nowrap;
}

.topic {
  margin-right: 15rpx;
  border: 2rpx solid #666;
  /* border: 2rpx solid #509f50; *//* box-shadow: 2rpx 2rpx 5rpx #888888; */
  font-size: 24rpx;
  color: #333;
  padding: 0 5rpx;
  border-radius: 5rpx;
}

.con {
  height: 200rpx;
  margin: 10rpx;
  background: #509f50;
}
