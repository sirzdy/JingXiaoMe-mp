/* pages/track/track.wxss */
.per_list{
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  height: 100px;
  width: 100%;
  margin-top: 10px;
  padding: 0 10px;
}
.list_item{
  width: 80px;
  margin: 0 10px;
  display: inline-block;
  text-align: center;
}
.bg{
  width: 100%;
  height: 100%;
  position: absolute;
  background: #fff;
  left: 0;
  top: 0;
  z-index: 100;
}
.bg_title{
  display: block;
  font-size: 32px;
  font-weight: bold;
  width: 100%;
  text-align: center;
  padding-top: 80px;

}
.bg_content{
  display: flex;
  margin-top: 80px;
  justify-content: center;
  align-items: center;
  flex-direction: row;

}
.c_block{
  flex: 1;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 50%;
  display: flex;
}
.c_name{
  display: block;
  font-size: 12px;
  width: 80px;
  text-align: center;
}
.close{
  position: absolute;
  bottom: 20px;
  left: 50%;
}